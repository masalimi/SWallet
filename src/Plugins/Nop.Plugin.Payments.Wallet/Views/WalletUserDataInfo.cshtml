@model Nop.Plugin.Payments.Wallet.Models.WalletUserDataModel
@{
    Layout = "";
}
<div asp-validation-summary="All"></div>
<input asp-for="Id" type="hidden" />

@if (ViewBag.RefreshPage == true)
{
    <script>
        try {window.opener.document.forms['@(Context.Request.Query["formId"])'].@(Context.Request.Query["btnId"]).click();}
        catch (e){}
        window.close();
    </script>
}


<form asp-controller="PaymentWallet" asp-action="SaveWalletUserData" method="post">
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="form-group">
                    <div class="col-sm-3">
                        <nop-label asp-for="Name" />
                    </div>
                    <div class="col-sm-9">
                        <nop-editor asp-for="Name" asp-postfix="Model.Name" />
                        <span asp-validation-for="Name"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-3">
                        <nop-label asp-for="Family" />
                    </div>
                    <div class="col-sm-9">
                        <nop-editor asp-for="Family" asp-postfix="Model.Family" />
                        <span asp-validation-for="Family"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-3">
                        <nop-label asp-for="CardNo" />
                    </div>
                    <div class="col-sm-9">
                        <nop-editor asp-for="CardNo" asp-postfix="Model.CardNo" />
                        <span asp-validation-for="CardNo"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-3">
                        <nop-label asp-for="Cvv2" />
                    </div>
                    <div class="col-sm-9">
                        <nop-editor asp-for="Cvv2" asp-postfix="Model.Cvv2" />
                        <span asp-validation-for="Cvv2"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-9 col-md-offset-3">
                        <input type="submit" name="save" class="btn bg-primary" value="@T("Admin.Common.Save")" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
